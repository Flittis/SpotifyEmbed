    <script>
        let handleAuthorization = _ => {
            let AuthPage = window.open('/api/auth', '', 'scrollbars=no,resizable=no,status=no,location=no,tollbar=no,menubar=no,width=780,height=800')
            AuthPage.window.focus()

            window.addEventListener('message', e => { e.source.close(); location.reload(); })
        }
    </script>
